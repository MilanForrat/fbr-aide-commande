{% extends 'base.html.twig' %}

{% block title %}Hello CategoriesController!{% endblock %}

{% block body %}
    <main class="container">
        <section class="row">
            <div class="col-12">
                <h1>Liste des Cat√©gories de produits</h1>
            </div>
            {% for category in categories %}
            <div class="col-6 col-md-3 my-3">
                <div class="card h-100">
                    <img class="card-img-top" src="{{ asset('assets/images/'~category.imagePath~'') }}" alt="Card image cap">
                    <div class="card-body">
                      <h5 class="card-title">{{category.name}}</h5>
                      <p class="card-text">{{category.description}}</p>
                      <a href="{{path('categories_index')}}{{category.name}}" class="btn btn-primary">Consulter les produits</a>
                    </div>
                  </div>
            </div>
            {% endfor %}
        </section>
    </main>
{% endblock %}
